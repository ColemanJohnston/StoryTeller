<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:weightSum="1">

    <TextView
        android:text="Title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tvTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:layout_alignTop="@+id/tvTitle"
        android:layout_alignParentStart="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="20dp" />



    <TextView
        android:text="Story Body"
        android:id="@+id/tvBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />


    <EditText
        android:id="@+id/etStoryBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvBody"
        android:gravity="top"
        android:lines="3"
        android:maxLines="5"
        android:inputType="textMultiLine|textCapSentences"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/tvDate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:layout_below="@+id/etStoryBody"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/ibCalendar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:backgroundTint="@android:color/transparent"
        android:paddingTop="10dp"
        android:scaleType="fitXY"
        android:tint="@color/colorAccent"
        app:srcCompat="@drawable/calendar_dark"
        android:layout_alignBottom="@+id/tvDate"
        android:layout_toStartOf="@+id/swAnonymous" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ivPreview"
        android:layout_alignParentStart="true"
        android:id="@+id/radioGroup">

    </RadioGroup>

    <Switch
        android:id="@+id/swAnonymous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ibCalendar"
        android:text="Anonymous?"
        android:layout_toEndOf="@+id/rFictional" />

    <ImageButton
        android:id="@+id/btTakePhoto"
        android:layout_width="29dp"
        android:layout_height="20dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/colorWhite"
        android:scaleType="fitCenter"
        android:tint="@color/colorAccent"
        app:srcCompat="@drawable/take_photo"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etStoryBody"
        android:layout_toEndOf="@+id/ivPreview" />

    <ImageButton
        android:id="@+id/btImportPhoto"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:backgroundTint="@android:color/transparent"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:tint="@color/colorAccent"
        app:srcCompat="@drawable/import_image_dark"
        android:layout_alignTop="@+id/btTakePhoto"
        android:layout_toEndOf="@+id/btTakePhoto" />

    <ImageView
        android:id="@+id/ivPreview"
        android:layout_width="wrap_content"
        android:layout_height="295dp"
        android:layout_above="@+id/btSave"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        app:srcCompat="@color/colorAccent" />

    <Button
        android:id="@+id/btSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/color_accent"
        android:text="Share your memory"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/ibPersonal"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:background="@drawable/color_accent"
        android:scaleType="fitCenter"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/personal"
        android:layout_alignTop="@+id/ibHistorical"
        android:layout_toEndOf="@+id/btImportPhoto" />

    <ImageButton
        android:id="@+id/ibHistorical"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:background="@drawable/color_accent"
        android:scaleType="centerInside"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/historical"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/ibFictional"
        android:layout_toStartOf="@+id/ibFictional"
        android:layout_marginEnd="13dp" />

    <ImageButton
        android:id="@+id/ibFictional"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:background="@drawable/color_accent"
        android:scaleType="centerInside"
        android:tint="@color/colorWhite"
        app:srcCompat="@drawable/fictional"
        android:layout_alignTop="@+id/btImportPhoto"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
